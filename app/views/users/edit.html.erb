<% provide(:title, "Edit") %>
<% provide(:class_text, 'user--edit') %>
<% provide(:button_text, '更新') %>
<h1>ユーザー情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
       <p><%= @user.name %></p>
     <li><%= link_to "削除", @user, method: :delete, class: "btn btn-primary" %></li>
       
       <div style = "margin-top: 10px"></div>
     <li><%= link_to "編集", edit_user_path, class: "btn btn-lg btn-primary" %></li>
      
   <%= form_with(model: @user, local: true) do |f| %>
    <%= render 'shared/error_messages', object: @user %>

    <%= f.label :name, class: "label-#{yield(:class_text)}" %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :email, class: "label-#{yield(:class_text)}" %>
    <%= f.email_field :email, class: "form-control" %>
  
    <%= f.label :affiliation, class: "label-#{yield(:class_text)}" %>
    <%= f.text_field :affiliation, class: "form-control" %>
  
    <%= f.label :employee_number, class: "label-#{yield(:class_text)}" %>
    <%= f.text_field :employee_number, class: "form-control" %>
  
    <%= f.label :uid, class: "label-#{yield(:class_text)}" %>
    <%= f.text_field :uid, class: "form-control" %>
  
    <%= f.label :basic_time, class: "label-#{yield(:class_text)}" %>
    <%= f.time_field :basic_time, class: "form-control" %>
  
    <%= f.label :work_start_time, class: "label-#{yield(:class_text)}" %>
    <%= f.time_field :work_start_time, class: "form-control" %>
  
    <%= f.label :work_end_time, class: "label-#{yield(:class_text)}" %>
    <%= f.time_field :work_end_time, class: "form-control" %>
    
    <%= f.label :superior, class: "label-#{yield(:class_text)}" %>
    <%= f.text_field :superior, class: "form-control" %>
    
    <%= f.label :admin, class: "label-#{yield(:class_text)}" %>
    <%= f.text_field :admin, class: "form-control" %>
    
    <%= f.label :password, class: "label-#{yield(:class_text)}" %>
    <%= f.password_field :password, class: "form-control" %>
    
     <div style = "margin-top: 10px">
      <%= f.submit "編集", class: "btn btn-primary btn-block btn-user_edit" %>
     </div>
   <% end %>
  </div>
</div>