<script>
  
​
​
$(function() {
 
  //セレクトボックスが切り替わったら発動
  $('#act1').change(function() {
 
    //選択したvalue値を変数に格納
    var val = $(this).val();
    $('#act2').change(function() {
      var val1 = $(this).val();
      var id = $('#id').val();
      var url = "/users/" + id + "/attendance_log"
    $.ajax({
      url: url,
      type: "GET",
      data: {year : val,
             month : val1 },
      datatype: "html",
      success: function(data){
        $('#act1').val(1); /* 元の初期選択にに戻してる */
        $('#act2').val(1); /* 元の初期選択にに戻してる */
      },
      error: function(data){
        //失敗時の処理
        console.log("失敗")
      }
    });
      //選択したvalue値をp要素に出力試し
      $('p').text(val1);
      $('span').text(val);
    });
  });
});
</script>








