<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <h1 class="modal-title">残業申請</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-8 col-md-offset-1">
          <%= form_with(model: @user, url: attendances_update_overtime_request_user_path(@user, day), local: true, method: :patch) do |f| %>
        　　  <table class="table table-bordered table-condensed table-hoveres">
        　　    <thead>
                <tr>
                  <th>日付</th>
                  <th>曜日</th>
                  <th>終了予定時間</th>
                  <th>翌日</th>
                  <th>業務処理内容</th>
                  <th>指示者確認㊞</th>
                </tr>
              </thead>
      
              <tbody>
       
                <%= fields_for :attendances do |af| %>
                   <%= af.hidden_field :id, :value => @attendance.worked_on %>
                      <tr>
                         <td><%= @day %></td>
                         <td><%= @youbi %></td>
                         <td><%= af.time_field :overtime_end, class: "form-control" %></td>
                         <td><%= af.check_box(:next_day, { :checked => false  }) %></td>
                         <td><%= af.text_field :overtime_memo, class: "form-control" %></td>
                         <td><%= af.select :superior, [["superior", "superior"],["管理者", "管理者"]],:include_blank => true ,class:"form-control" %></td>
                      </tr>
                   <% end %>
                <% end %>
              </tbody>
            </table>
          <% end %>
        </div>
      </div>
    
      <div class="modal-footer">
        <%= f.submit "残業を申請する", class: "btn btn-primary" %>
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
    
