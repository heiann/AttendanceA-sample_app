<% provide(:class_text, 'overtime_request') %>

<div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <h1 class="modal-title">残業申請</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @user, url: update_basic_info_user_path(user), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @user %>
              <table class = "table table-bordered table-condensed table-striped basic-info-table">
                    <thead>
                      <tr>
                        <th>日付</th>
                        <th>曜日</th>
                        <th>終了予定時間</th>
                        <th>翌日</th>
                        <th>業務処理内容</th>
                        <th>指示者確認(印)</th>
                      </tr>
                    </thead>
                    <tbody>
                     <% @attendances.each do |day| %>
                       <%= f.fields_for "attendances[]", day do |attendance| %>
                        <% if day.worked_on == @attendance.worled_on %>
                          <tr>
                            <td><%= l(day.worked_on, format: :short) %></td>
                            <td><%= $days_of_the_week[day.worked_on.wday] %></td>
                            <td><%= attendance.time_select :overtime_end, { include_blank: true }, class: "input-sm" %></td>
                            <td><%= attendance.check_box :next_day_check, checked: false %></td>
                            <td><%= attendance.text_field :time_content, class: "form-control" %></td>
                            <td><%= attendance.select :superior_confirmation, { "なし": 1, "申請中": 2,"承認": 3, "否認": 4, }, {include_blank: true }, class: "form-control", requred: true %></td>
                          </tr>
                        <% end %>
                       <% end %>
                     <% end %>
                    </tbody>
                  </table>
                 <%= f.submit "変更を送信する", class: "btn btn-primary btn-block" %>
                <div class="center">
                 <button type="button" class="btn btn-default %>" data-dismiss="modal">
                   キャンセル
                 </button>
                </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>