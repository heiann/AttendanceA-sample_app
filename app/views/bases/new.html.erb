<% provide(:title, 'New base') %>

<h1>拠点登録</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_with(model: @base, url: user_bases_url(@user), local: true, method: :post) do |f| %>
    <%= render'shared/error_messages', model: @base %>
    
    <%= f.label :拠点番号, class: "label-form" %>
    <%= f.text_field :base_id, class: "form-control" %>
    
    <%= f.label :拠点名, class: "label-form" %>
    <%= f.text_field :base_name, class: "form-control" %>
    
    <%= f.label :拠点種類, class: "label-form" %>
    <%= f.text_field :base_type, class: "form-control" %>
    
     <div style = "margin-top: 10px">
      <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %>
     </div>
   <% end %>
  </div>
</div>